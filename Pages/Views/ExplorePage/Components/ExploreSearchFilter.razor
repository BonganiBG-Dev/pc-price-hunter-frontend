@inject IJSRuntime js

<details open class="bg-white overflow-hidden border border-gray-200 rounded">
    <summary class="flex items-center justify-between px-5 py-3 bg-gray-100 lg:hidden">
        <span class="text-sm font-medium">
            Toggle Filters
        </span>

        <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
    </summary>

    <form action="" class="border-t border-gray-200 lg:border-t-0">

        <div>
            <div tabindex="0" class="collapse collapse-plus">
                <input type="checkbox" class="peer">
                <div class="collapse-title text-md font-mediumlight">
                    Category
                </div>

                <div class="collapse-content">
                    <div class="px-5 py-6 space-y-2">
                        <!-- loop this -->
                        @foreach (var category in categories)
                        {
                            <div class="flex items-center">
                                @* On click, change the category and get the values for that category *@
                                <a class="cursor-pointer underline hover:text-gray-400">
                                    @category
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>


        <!-- Loop this -->
        <!-- This will hold all of the other filters, the categories is on it's own -->
        <div>
            <div tabindex="0" class="collapse collapse-plus">
                <input type="checkbox" class="peer">
                <div class="collapse-title text-md font-mediumlight">
                    Series Filter
                </div>

                <div class="collapse-content">
                    <div class="px-5 py-6 space-y-2">
                        <!-- loop this -->
                        @* Loop though each setting option in the category *@
                        @foreach (var category in categories)
                        {
                            
                            <div class="flex items-center">
                            <input id={{item._id}} type="checkbox" name={{item._id}}
                                class="w-5 h-5 border-gray-300 rounded" />

                            <label for={{item._id}} class="ml-3 text-sm font-mediumlight">
                                {{item.Name}}
                            </label>
                        </div>
                        }

                        <div class="pt-2">
                            <button type="button" class="text-xs text-gray-500 underline">
                                Reset Category
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="flex justify-between px-5 py-3 border-t border-gray-200">
            <button name="reset" type="button" class="text-xs font-medium text-gray-600 underline rounded">
                Reset All
            </button>

            <button name="commit" type="button" class="btn btn-outline btn-sm">
                Apply Filters
            </button>
        </div>
    </form>
</details>


